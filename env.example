# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local for development
# Set these variables in your production environment (Vercel, PartyKit, etc.)

# ========================================
# CLERK AUTHENTICATION
# ========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ========================================
# DATABASE (SUPABASE)
# ========================================
POSTGRES_URL_NON_POOLING=postgresql://postgres:[password]@[host]:5432/postgres
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ========================================
# STRIPE PAYMENTS
# ========================================
# Production: Use live keys (sk_live_...)
# Development: Use test keys (sk_test_...)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Price IDs from Stripe Dashboard
# Create these products in Stripe: 1 Credit, 3 Credits, Unlimited
NEXT_PUBLIC_STRIPE_1_PRICE_ID=price_your_1_credit_price_id_here
NEXT_PUBLIC_STRIPE_3_PRICE_ID=price_your_3_credit_price_id_here
NEXT_PUBLIC_STRIPE_UNLIMITED_PRICE_ID=price_your_unlimited_price_id_here

# ========================================
# EMAIL (RESEND)
# ========================================
RESEND_API_KEY=re_your_resend_api_key_here

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL=https://yourdomain.com
APP_URL=https://yourdomain.com

# ========================================
# PARTYKIT (if using separate deployment)
# ========================================
PARTYKIT_URL=https://your-partykit-url.partykit.dev

# ========================================
# OPTIONAL: MONITORING & ANALYTICS
# ========================================
# SENTRY_DSN=https://your_sentry_dsn_here
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# OPTIONAL: RATE LIMITING (UPSTASH REDIS)
# ========================================
# UPSTASH_REDIS_REST_URL=https://your_redis_url_here
# UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ========================================
# DEVELOPMENT ONLY (don't set in production)
# ========================================
# NODE_ENV=development 